.action-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin: 20rpx;
}

.action-button.primary {
  background: #07c160;
  color: #fff;
}

.action-button.secondary {
  background: #f5f5f5;
  color: #333;
}

.action-button.disabled {
  opacity: 0.5;
}

.weui-loading {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
} 