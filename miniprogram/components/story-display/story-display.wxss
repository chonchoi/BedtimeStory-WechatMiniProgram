.story-display {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  min-height: 300rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
}

.loading .weui-loading {
  margin-bottom: 20rpx;
}

.content {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
}

.empty {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  color: #999;
  font-size: 28rpx;
} 