.selector {
  margin: 20rpx;
}

.selector-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.selector-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.selector-option {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.selector-option.selected {
  background: #07c160;
  color: #fff;
}

.emoji {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.name {
  font-size: 28rpx;
} 