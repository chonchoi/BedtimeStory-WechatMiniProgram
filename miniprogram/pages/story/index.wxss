.container {
  padding: 20px;
  min-height: 100vh;
  background: #f8f9fa;
}

.step-tips {
  text-align: center;
  margin-bottom: 30px;
  color: #666;
  font-size: 16px;
}

.selection-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15px;
  margin-bottom: 30px;
}

.selection-item {
  background: white;
  padding: 15px;
  border-radius: 12px;
  text-align: center;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}

.selection-item.selected {
  background: #e3f2fd;
  border: 2px solid #2196f3;
}

.emoji {
  font-size: 24px;
  display: block;
  margin-bottom: 8px;
}

.button-group {
  position: sticky;
  bottom: 20px;
  margin: 20px 0;
  display: flex;
  flex-direction: column;
  gap: 10px;
  background: rgba(248, 249, 250, 0.9);
  padding: 15px;
  border-radius: 12px;
  backdrop-filter: blur(10px);
}

.generate-btn, .restart-btn {
  width: 100% !important;
  border-radius: 8px;
  font-size: 16px;
  padding: 12px;
  transition: all 0.3s ease;
}

.generate-btn {
  background: #2196f3;
  color: white;
}

.generate-btn[disabled] {
  background: #bdbdbd;
}

.restart-btn {
  background: #f5f5f5;
  color: #666;
}

.restart-btn:active,
.generate-btn:active {
  transform: scale(0.98);
}

.story-section {
  margin-top: 30px;
}

.story-container {
  background: white;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.1);
}

.story-header {
  margin-bottom: 15px;
  padding-bottom: 15px;
  border-bottom: 1px solid #eee;
}

.story-timestamp {
  font-size: 12px;
  color: #999;
}

.story-content {
  font-size: 16px;
  line-height: 1.8;
  color: #333;
  white-space: pre-wrap;
  word-break: break-all;
}

.story-content.generating {
  opacity: 0.7;
}

.generating-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  padding: 30rpx;
}

.progress-bar {
  width: 100%;
  height: 6rpx;
  background-color: #f0f0f0;
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background-color: #07c160;
  transition: width 0.3s ease;
}

.status-text {
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 0;
}

.typing-indicator {
  display: flex;
  gap: 8rpx;
  justify-content: center;
  padding: 10rpx;
}

.typing-indicator .dot {
  width: 8rpx;
  height: 8rpx;
  background: #07c160;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out;
}

.typing-indicator .dot:nth-child(1) { animation-delay: -0.32s; }
.typing-indicator .dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes bounce {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
} 