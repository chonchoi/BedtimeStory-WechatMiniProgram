/**index.wxss**/

page {
  padding-bottom: 60rpx;
  background-color: #f5f7fa;
}

.container {
  padding: 30rpx 0;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #fff;
}

.section {
  margin-bottom: 40rpx;
  padding: 0 30rpx;
}

.section-title {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: "";
  width: 8rpx;
  height: 32rpx;
  background: #07c160;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.selection-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 0;
}

.selection-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
  padding: 40rpx 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  transition: all 0.3s ease;
  overflow: hidden;
}

.selection-item::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 24rpx;
  border: 4rpx solid transparent;
  transition: all 0.3s ease;
}

.selection-item.selected {
  background: #f0fff5;
  transform: translateY(-4rpx);
}

.selection-item.selected::after {
  border-color: #07c160;
}

.emoji {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.selection-item.selected .emoji {
  transform: scale(1.1);
}

.selection-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.selection-desc {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.button-group {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx 40rpx calc(30rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(10px);
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05);
  z-index: 100;
}

.generate-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #fff;
  background: #07c160;
  transition: all 0.3s ease;
}

.generate-btn[disabled] {
  opacity: 0.6;
}

.story-container {
  margin: 30rpx 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.story-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.story-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-wrap;
}

.token-display {
  margin: 20px;
  padding: 10px;
  background: #f8f8f8;
  border-radius: 4px;
}

.token-text {
  word-break: break-all;
  font-size: 14px;
  color: #333;
}

.coze-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #fff;
  background: #07c160;
  margin-bottom: 20rpx;
}

.coze-result {
  margin-top: 40rpx;
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  width: 90%;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.restart-btn {
  margin-top: 30rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #333;
  background: #f5f5f5;
}

/* 骨架屏样式 */
@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

.skeleton {
  padding: 30rpx;
}

.skeleton-section {
  margin-bottom: 40rpx;
}

.skeleton-title {
  height: 36rpx;
  width: 200rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.skeleton-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.skeleton-item {
  height: 200rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: 24rpx;
}

.skeleton-button {
  height: 44px;
  width: 80%;
  margin: 30px auto;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: shimmer 0.3s infinite;
  border-radius: 22px;
}

/* 新手引导遮罩 */
.guide-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.7);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.guide-content {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  width: 80%;
  max-width: 600rpx;
}

.guide-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.guide-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
  text-align: center;
}

.guide-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  color: #fff;
  background: #07c160;
  text-align: center;
}