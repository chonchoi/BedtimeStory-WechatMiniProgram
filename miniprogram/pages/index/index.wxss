/**index.wxss**/

page {
  /* padding-top: 54rpx; */
  padding-bottom: 60rpx;
  background-color: #fff;
}

.container {
  padding: 30rpx 20rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
}

.selection-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 20rpx;
}

.selection-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.selection-item.selected {
  background: #e6f7ff;
  border: 2rpx solid #1890ff;
}

.emoji {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.button-group {
  margin-top: 40rpx;
  padding: 0 40rpx;
}

.generate-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #fff;
  background: #1890ff;
  margin-bottom: 20rpx;
}

.story-container {
  margin: 30rpx 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.story-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.story-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-wrap;
}

.token-display {
  margin: 20px;
  padding: 10px;
  background: #f8f8f8;
  border-radius: 4px;
}

.token-text {
  word-break: break-all;
  font-size: 14px;
  color: #333;
}

.coze-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #fff;
  background: #07c160;
  margin-bottom: 20rpx;
}

.coze-result {
  margin-top: 40rpx;
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  width: 90%;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.generate-btn {
  background: #07c160;
  color: white;
  border-radius: 24px;
  padding: 8px 32px;
  margin: 20px 0;
}

.generate-btn[disabled] {
  background: #ccc;
  color: #fff;
}

.restart-btn {
  margin-top: 30rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #333;
  background: #f5f5f5;
}