/**index.wxss**/

page {
  padding-bottom: 60rpx;
  background-color: #f5f7fa;
}

.container {
  padding: 30rpx 0;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #fff;
}

.section {
  margin-bottom: 40rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
  font-weight: 500;
}

.selection-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  padding: 0;
  margin: 0 10rpx;
}

.selection-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
  padding: 16rpx 8rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  border: 2rpx solid #eee;
}

.selection-item.selected {
  background: #e6f7ff;
  border: 2rpx solid #1890ff;
}

.emoji {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.button-group {
  margin-top: 40rpx;
  padding: 0 40rpx;
}

.generate-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #fff;
  background: #07c160;
  margin-bottom: 20rpx;
}

.generate-btn[disabled] {
  background: #ccc;
  color: #fff;
}

.story-container {
  margin: 30rpx 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.story-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.story-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-wrap;
}

.token-display {
  margin: 20px;
  padding: 10px;
  background: #f8f8f8;
  border-radius: 4px;
}

.token-text {
  word-break: break-all;
  font-size: 14px;
  color: #333;
}

.coze-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #fff;
  background: #07c160;
  margin-bottom: 20rpx;
}

.coze-result {
  margin-top: 40rpx;
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  width: 90%;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.restart-btn {
  margin-top: 30rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #333;
  background: #f5f5f5;
}

/* 骨架屏样式 */
@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

.skeleton {
  padding: 20px;
  width: 100%;
  box-sizing: border-box;
}

.skeleton-section {
  margin-bottom: 30px;
}

.skeleton-title {
  height: 24px;
  width: 150px;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: shimmer 0.3s infinite;
  border-radius: 4px;
  margin-bottom: 15px;
}

.skeleton-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15px;
  padding: 10px 0;
}

.skeleton-item {
  height: 80px;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: shimmer 0.3s infinite;
  border-radius: 8px;
}

.skeleton-button {
  height: 44px;
  width: 80%;
  margin: 30px auto;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: shimmer 0.3s infinite;
  border-radius: 22px;
}